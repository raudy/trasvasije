<div style="width:80%;margin:0 auto;">
  <!--<p id="notice"><%= notice %></p>-->
  <div class="text-titulo">
    <h1>Listando Categorías</h1>
  </div>  

  <table>
    <thead>
      <tr>
        <th>Código</th>
        <th>Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.codigo %></td>
          <td><%= category.nombre %></td>
          <td><%= link_to 'Mostrar', category %></td>
          <td><%= link_to 'Editar', edit_category_path(category) %></td>
          <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <p><%= link_to 'Nueva Categoría', new_category_path %></p>
  <p><%= link_to "Atrás", menu_index_path %></p>
</div>