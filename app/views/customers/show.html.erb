<div style="width:80%;margin:0 auto;">
	<!--<p id="notice"><%= notice %></p>-->

	<p>
	  <strong>Rut:</strong>
	  <%= @customer.rut %>
	</p>

	<p>
	  <strong>Nombre:</strong>
	  <%= @customer.nombre %>
	</p>

	<p>
	  <strong>Dirección:</strong>
	  <%= @customer.direccion %>
	</p>

	<p>
	  <strong>Fono:</strong>
	  <%= @customer.fono %>
	</p>

	<%= link_to 'Editar', edit_customer_path(@customer) %> |
	<%= link_to 'Volver', customers_path %>

	<p>
		<strong><h3>Entregas realizadas por este Cliente:</h3></strong>
	</p>
	<p>
		<table>
			<thead>
			    <tr>
				    <th>Cantidad</th>
				    <th>Fecha</th>
				    <th colspan="3"></th>
		    	</tr>
		    </thead>
			<tbody>
				<% Delivery.all.each do |delivery| %>
					<tr>
						<% if @customer.rut==delivery.customer.rut %>
							<td><%= delivery.cantidad %></td>
		          			<td><%= delivery.fecha %></td>
						<% end %>
					</tr>
				<% end %>
			</tbody>
		</table>
	</p>

	<p>
		<strong><h3>Facturas realizadas a este Cliente:</h3></strong>
	</p>
	<p>
		<table>
			<thead>
			    <tr>
				    <th>Código</th>
				    <th>Fecha</th>
				    <th>Monto Bruto</th>
				    <th colspan="3"></th>
		    	</tr>
		    </thead>
			<tbody>
				<% Invoice.all.each do |invoice| %>
					<tr>
						<% if @customer.rut==invoice.customer.rut %>
							<td><%= invoice.codigo %></td>
		          			<td><%= invoice.fecha %></td>
		          			<td><%= invoice.bruto %></td>
						<% end %>
					</tr>
				<% end %>
			</tbody>
		</table>
	</p>

</div>
