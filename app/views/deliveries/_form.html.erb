<%= form_for(@delivery) do |f| %>
  <% @delivery.errors.full_messages.each do |message| %>
    <div class="error white">
      * <%= message %>
    </div>
  <% end %>

  <div class="field">
    <%= f.number_field :cantidad, placeholder: "Cantidad", class: "form-control", style: "width:250px" %>
  </div>
  <div class="field">
    <%= f.label :fecha %><br>
    <%= f.date_select :fecha, start_year: 2015 %>
  </div>
  <div class="field">
    <%= f.label :customer_id, "Cliente" %><br>
    <%= collection_select( :delivery, :customer_id, Customer.all, :id, :nombre, { :multiple => false }, { :class => "my-custom-class" } ) %>
  </div>
  <div class="field">
    <%= f.label :material_id, "Materia Prima" %><br>
    <%= collection_select( :delivery, :material_id, Material.all, :id, :nombre, { :multiple => false }, { :class => "my-custom-class" } ) %>
  </div>
  <div class="actions">
    <%= f.submit "Guardar", class: "btn be-red white" %>
  </div>
<% end %>
