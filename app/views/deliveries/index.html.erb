<div style="width:80%;margin:0 auto;">
  <!--<p id="notice"><%= notice %></p>-->
  <div class="text-titulo">
    <h1>Listando Entregas</h1>
  </div>
  <table>
    <thead>
      <tr>
        <th>Cantidad</th>
        <th>Fecha</th>
        <th>Cliente</th>
        <th>Materia Prima</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @deliveries.each do |delivery| %>
        <tr>
          <td><%= delivery.cantidad %></td>
          <td><%= delivery.fecha %></td>
          <td><%= delivery.customer ? delivery.customer.nombre : "Sin asignar" %></td>
          <td><%= delivery.material ? delivery.material.nombre : "Sin asignar" %></td>
          <td><%= link_to 'Mostrar', delivery %></td>
          <td><%= link_to 'Editar', edit_delivery_path(delivery) %></td>
          <td><%= link_to 'Eliminar', delivery, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <p><%= link_to 'Nueva Entrega', new_delivery_path %></p>
  <p><%= link_to "Atrás", menu_index_path %></p>
</div>