<%= form_for(@mat_prod) do |f| %>
  <% @mat_prod.errors.full_messages.each do |message| %>
    <div class="error white">
      * <%= message %>
    </div>
  <% end %>

  <div class="field">
    <%= f.number_field :cantidad, placeholder: "Cantidad", class: "form-control", style: "width:250px" %>
  </div>
  <div class="field">
    <%= f.label :material_id, "Materia Prima" %><br>
    <%= collection_select( :mat_prod, :material_id, Material.all, :id, :nombre, { :multiple => false }, { :class => "my-custom-class" } ) %>
  </div>
  <div class="field">
    <%= f.label :product_id, "Producto" %><br>
    <%= collection_select( :mat_prod, :product_id, Product.all, :id, :nombre, { :multiple => false }, { :class => "my-custom-class" }) %>
  <div class="actions">
    <%= f.submit "Guardar", class: "btn be-red white" %>
  </div>
<% end %>
