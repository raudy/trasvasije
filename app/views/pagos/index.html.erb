<div style="width:80%;margin:0 auto;">
	<div class="text-titulo">
    	<h1>Ganancias</h1>
  	</div>
  	<%suma = 0%>
  	<table>
  		<thead>
  			<tr>
  				<th>Código</th>
				<th>Monto Bruto</th>
				<th colspan="3"></th>
  			</tr>
  		</thead>
  		<tbody>
  			<% Invoice.all.each do |t| %>
  				<tr>
  					<td><%= t.codigo %></td>
		          	<td><%= t.bruto %></td>
		          	<% suma = suma + t.bruto %>
  				</tr>
  			<% end %>
  		</tbody>
  	</table>

  		<p><h3>La ganancia total es de: $<%= suma %> </h3></p>




  	<p><%= link_to "Atrás", menu_index_path %></p>
</div>