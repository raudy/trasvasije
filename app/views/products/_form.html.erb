<%= form_for(@product) do |f| %>
  <% @product.errors.full_messages.each do |message| %>
    <div class="error white">
      * <%= message %>
    </div>
  <% end %>

  <div class="field">
    <%= f.number_field :codigo, placeholder: "Código", class: "form-control", style: "width:250px" %>
  </div>
  <div class="field">
    <%= f.text_field :nombre, placeholder: "Nombre", class: "form-control", style: "width:250px" %>
  </div>
  <div class="field">
    <%= f.label :category_id, "Categoría" %><br>
    <%= collection_select( :product, :category_id, Category.all, :id, :nombre, { :multiple => false }, { :class => "my-custom-class" } ) %>
  </div>

  <div class="actions">
    <%= f.submit "Guardar", class: "btn be-red white" %>
  </div>
<% end %>